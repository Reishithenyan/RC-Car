#include <IRremote.h>

const int RECV_PIN = 2;

//initializing the pins for motor
int left_motor1 = 11;      //pin 6 of arduino to pin 7 of l293d
int left_motor2 = 12;      //pin 7 of arduino to pin 2 of l293d
int right_motor1  =6;      //pin 5 of arduino to pin 10 of l293d
int right_motor2 = 5;      //pin 4 of arduino to pin 15 of l293d

IRrecv irrecv(RECV_PIN);
decode_results results;
unsigned long key_value = 0;

void setup(){
  Serial.begin(9600);
  irrecv.enableIRIn();
  irrecv.blink13(true);

//initializing all the pins where we have connected the motor as output pins
  pinMode(left_motor1, OUTPUT);
  pinMode(left_motor2, OUTPUT);
  pinMode(right_motor1, OUTPUT);
  pinMode(right_motor2, OUTPUT);
  
}

void loop(){
  if (irrecv.decode(&results)){
 
        if (results.value == 0XFFFFFFFF)
          results.value = key_value;

        switch(results.value){
          case 0xFFA25D:
          Serial.println("POWER");
          break;
          case 0xFF629D:
          Serial.println("VOL+");
          break;
          case 0xFFE21D:
          Serial.println("FUNC/STOP");

          digitalWrite(left_motor1,LOW);
          digitalWrite(left_motor2,LOW);
          digitalWrite(right_motor1,LOW);
          digitalWrite(right_motor2,LOW);
          
          break;
          case 0xFF22DD:
          Serial.println("|<<");
          break;
          case 0xFF02FD:
          Serial.println(">||");
          break ;  
          case 0xFFC23D:
          Serial.println(">>|");
          break ;               
          case 0xFFE01F:
          Serial.println("DOWN");
          break ;  
          case 0xFFA857:
          Serial.println("VOL-");
          break ;  
          case 0xFF906F:
          Serial.println("UP");
          break ;  
          case 0xFF6897:
          Serial.println("0");
          break ;  
          case 0xFF9867:
          Serial.println("EQ");
          break ;
          case 0xFFB04F:
          Serial.println("ST/REPT");
          break ;
          case 0xFF30CF:
          Serial.println("1");
          break ;
          case 0xFF18E7:
          Serial.println("2");
          //top is forward, bottom is backward
          digitalWrite(left_motor1,HIGH);
          digitalWrite(left_motor2,LOW);
          //bottom is forward
          digitalWrite(right_motor1,LOW);
          digitalWrite(right_motor2,HIGH);
          break ;
          case 0xFF7A85:
          Serial.println("3");
          break ;
          case 0xFF10EF:
          Serial.println("4");
          digitalWrite(left_motor1,HIGH);
          digitalWrite(left_motor2,LOW);
          digitalWrite(right_motor1,LOW);
          digitalWrite(right_motor2,LOW);
          break ;
          case 0xFF38C7:
          Serial.println("5");
          break ;
          case 0xFF5AA5:
          Serial.println("6");
          digitalWrite(left_motor1,LOW);
          digitalWrite(left_motor2,LOW);
          digitalWrite(right_motor1,LOW);
          digitalWrite(right_motor2,HIGH);
          break ;
          case 0xFF42BD:
          Serial.println("7");
          break ;
          case 0xFF4AB5:
          Serial.println("8");
          digitalWrite(left_motor1,LOW);
          digitalWrite(left_motor2,HIGH);
          digitalWrite(right_motor1,HIGH);
          digitalWrite(right_motor2,LOW);
          break ;
          case 0xFF52AD:
          Serial.println("9");
          break ;      
        }
        key_value = results.value;
        irrecv.resume(); 
  }
}
